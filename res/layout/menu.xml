<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:src="@drawable/logo" />

    <ImageButton
        android:id="@+id/btnJugar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@null"
        android:onClick="atenderBotonMenu"
        android:src="@drawable/jugar" />

    <ImageButton
        android:id="@+id/btnScore"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:background="@null"
        android:onClick="atenderBotonMenu"
        android:src="@drawable/puntajes" />

    <ImageButton
        android:id="@+id/btnInstrucciones"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:background="@null"
        android:onClick="atenderBotonMenu"
        android:src="@drawable/instrucciones" />

    <ImageButton
        android:id="@+id/btnConfiguraciones"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:background="@null"
        android:onClick="atenderBotonMenu"
        android:src="@drawable/configuraciones" />

    <ImageButton
        android:id="@+id/btnAcerca"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:background="@null"
        android:onClick="atenderBotonMenu"
        android:src="@drawable/acercade" />

</LinearLayout>